<h1>Quartos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Título</th>
      <th>Localização</th>
      <th>Descrição</th>
      <th>Esposição</th>
      <th>Editar</th>
      <th>Excluir</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Esposição', room , class: "btn btn-primary"%></td>
        <td><%= link_to 'Editar', edit_room_path(room), class: "btn btn-success" %></td>
        <td><%= link_to 'Excluir', room, class: "btn btn-danger", method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Quarto', new_room_path, class: "btn btn-primary" %>
