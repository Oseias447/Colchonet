
<%= form_for (@room || Room.new) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
  
    <%= form.label :location %>
    <%= form.text_field :location %>
  

    <%= form.label :description %>
    <%= form.text_area :description %>
  
    <div>
	<%= form.label :picture %>
	<%= form.file_field :picture %>
	<%= error_tag @room, :picture %>
  	</div>

    <div class="actions">
		<%= form.submit %>
	</div>
<% end %>
