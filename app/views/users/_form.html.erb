
<% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-danger" role="alert"><%=message%></div>
<% end %>

<%= form_for @user do |f| %>

<div class="container">
<div class="form-group"> 
<%= f.label :Nome %>
<%= f.text_field :full_name, class: "form-control" %>
<%= error_tag @user, :full_name %>
</div>

<div class="form-group"> 
<%= f.label :Localização %>
<%= f.text_field :location, class: "form-control" %>
<%= error_tag @user, :location %>
</div>

<div class="form-group"> 
<%= f.label :Email %>
<%= f.text_field :email, class: "form-control" %>
<%= error_tag @user, :email %>
</div>

<div class="form-group"> 
<%= f.label :Senha %>
<%= f.password_field :password, class: "form-control" %>
<%= error_tag @user, :password %>
</div>

<div class="form-group"> 
<%= f.label :Confirmar_senha %>
<%= f.password_field :password_confirmation, class: "form-control" %>
<%= error_tag @user, :password_confirmation %>
</div>

<div class="form-group"> 
<%= f.label :bio %>
<%= f.text_area :bio, class: "form-control" %>
<%= error_tag @user, :bio %>
</div>

<div class="form-group"> 
 <%= f.submit texto_da_acao, class: "btn btn-primary btn-lg" %>
</div>
</div>
<% end %>